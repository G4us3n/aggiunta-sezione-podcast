<div class="span2"></div>
<div class="span6">
	<form method="post" class="form-horizontal span6">
		<center>
			<h3>Modifica Password</h3>
		</center>
		<div class="control-group">
			<label class="control-label" for="password"><strong>Vecchia Password:</strong></label>
			<div class="controls">
				<input type="password" name="oldpassword" id="password" placeholder="Vecchia Password">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputPassword1"><strong>Nuova Password:</strong></label>
			<div class="controls">
				<input type="password" name="newpassword1" id="inputPassword1" placeholder="Nuova Password">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputPassword2"><strong>Ripeti Nuova Password:</strong></label>
			<div class="controls">
				<input type="password" name="newpassword2" id="inputPassword2" placeholder="Ripeti Nuova Password">
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-primary">Modifica Password</button>
			</div>
		</div>
	</form>
</div>